
<br>
<%= render "flights/flight_detail" %><br>

<li>Number of passengers: <%= params[:num_passengers] %></li>

<%= form_for @booking do |booking_form| %>
  <ul>


    <%= booking_form.hidden_field :flight_id, :value => @flight.id %>


    <%= booking_form.fields_for :passengers do |passenger_form| %>
      Passenger Email: <%= passenger_form.text_field :email %>
      Passenger Name: <%= passenger_form.text_field :name %>


      <br/>
    <% end %>


  <hr>


    <%= booking_form.submit "Book this flight!"%>

  </ul>
<% end %>